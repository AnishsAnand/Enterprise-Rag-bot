# ============================================================================
# Open WebUI + Enterprise RAG Bot Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# Open WebUI Settings
# ============================================================================

# Secret key for Open WebUI (generate with: openssl rand -hex 32)
WEBUI_SECRET_KEY=generate-a-secure-random-secret-key-minimum-32-characters

# API key for Open WebUI to authenticate with RAG Bot backend
OPENWEBUI_API_KEY=your-secure-api-key-here

# ============================================================================
# Enterprise RAG Bot Settings
# ============================================================================

# OpenAI API Key (for LLM calls)
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT Secret for token-based auth (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-jwt-secret-key-here

# API Authentication Token
API_AUTH_TOKEN=your-api-auth-token-here

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ragbot

# PostgreSQL password
POSTGRES_PASSWORD=postgres

# Redis connection string
REDIS_URL=redis://redis:6379/0

# ============================================================================
# Vector Database Configuration
# ============================================================================

# Milvus host and port
MILVUS_HOST=milvus
MILVUS_PORT=19530

# ============================================================================
# Security & CORS
# ============================================================================

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Application Settings
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

